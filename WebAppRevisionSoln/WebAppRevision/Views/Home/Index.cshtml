@model IEnumerable<WebAppRevision.Models.Employee>

@{
    ViewBag.Title = "Home Page";
}



<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Dept</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Did</td>

        </tr>
        }
    </tbody>
</table>